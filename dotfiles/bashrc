#
# Prompt
#

rand() {
    echo $((  $1 *  RANDOM  / 32767   ))
}

rand_element () {
    local -a th=(x "$@")
    unset th[0]
    echo "${th[$(($(rand "${#th[*]}")+1))]}"
}

